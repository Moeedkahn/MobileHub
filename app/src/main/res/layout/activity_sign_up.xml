<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010b13">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Register">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:paddingTop="35dp"
            android:text="MOVIE HUB"
            android:textColor="#990000"
            android:paddingLeft="100dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:background="#000000"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Email: "
                android:textColor="#D3D3D3"
                />

            <EditText
                android:id="@+id/signupEmail"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:background="#D3D3D3"
                android:layout_marginLeft="55dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Password: "
                android:textColor="#D3D3D3"
                />

            <EditText
                android:id="@+id/signupPasswaord"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword"
                android:background="#D3D3D3"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RadioGroup">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">
            <RadioButton
                android:id="@+id/basicbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic"
                android:textColor="#D3D3D3"
                android:textSize="25sp"
                android:buttonTint="#D3D3D3"
                />
            <RadioButton
                android:id="@+id/premiumbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Premium"
                android:textColor="#D3D3D3"
                android:textSize="25sp"
                android:buttonTint="#D3D3D3"/>

        </LinearLayout>
        </RadioGroup>
        <CheckBox
            android:id="@+id/comedybtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comedy"
            android:textColor="#D3D3D3"
            android:textSize="25sp"
            android:buttonTint="#D3D3D3"
            android:layout_marginLeft="20dp"/>
        <CheckBox
            android:id="@+id/horrorbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horror"
            android:textColor="#D3D3D3"
            android:textSize="25sp"
            android:buttonTint="#D3D3D3"
            android:layout_marginLeft="20dp"/>
        <CheckBox
            android:id="@+id/fantasybtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fantasy"
            android:textColor="#D3D3D3"
            android:textSize="25sp"
            android:buttonTint="#D3D3D3"
            android:layout_marginLeft="20dp"/>
        <CheckBox
            android:id="@+id/scibtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sci-fi"
            android:textColor="#D3D3D3"
            android:textSize="25sp"
            android:buttonTint="#D3D3D3"
            android:layout_marginLeft="20dp"/>



        <Button
            android:id="@+id/signupbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="#990000"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

</ScrollView>